# AetherFlow Agent Environment Variables Example
#
# Copy this file to .env and customize the values for your setup.
# Environment variables take the highest priority in configuration loading.
#
# Basic usage: export these variables or source this file
# Advanced usage: Use with python-dotenv to load automatically

# Required: OpenAI API Configuration
OPENAI_API_KEY=your-openai-api-key-here
# OPENAI_ORGANIZATION=your-organization-id-here  # Optional
# OPENAI_BASE_URL=https://api.openai.com/v1     # Optional custom endpoint

# LLM Configuration
AETHERFLOW_AGENT_LLM_MODEL=gpt-4
AETHERFLOW_AGENT_LLM_TEMPERATURE=0.1
AETHERFLOW_AGENT_LLM_MAX_TOKENS=2000
AETHERFLOW_AGENT_LLM_TIMEOUT=60

# Tools Configuration
AETHERFLOW_AGENT_TOOLS_AUTO_DISCOVER=true
AETHERFLOW_AGENT_TOOLS_MAX_WORKERS=4
AETHERFLOW_AGENT_TOOLS_TIMEOUT=30

# Tools Retry Configuration
AETHERFLOW_AGENT_TOOLS_RETRY_MAX_RETRIES=3
AETHERFLOW_AGENT_TOOLS_RETRY_INITIAL_DELAY=1.0
AETHERFLOW_AGENT_TOOLS_RETRY_MAX_DELAY=60.0
AETHERFLOW_AGENT_TOOLS_RETRY_EXPONENTIAL_BASE=2.0
AETHERFLOW_AGENT_TOOLS_RETRY_JITTER=true

# Memory Configuration
AETHERFLOW_AGENT_MEMORY_MAX_MESSAGES=1000
AETHERFLOW_AGENT_MEMORY_MAX_TOKENS=8000
AETHERFLOW_AGENT_MEMORY_RESERVE_TOKENS=1000
AETHERFLOW_AGENT_MEMORY_ENABLE_COMPRESSION=true
AETHERFLOW_AGENT_MEMORY_STORAGE_PATH=.aetherflow/memory
AETHERFLOW_AGENT_MEMORY_TRIMMING_STRATEGY=recent_first

# Storage Configuration
AETHERFLOW_AGENT_STORAGE_PATH=.aetherflow/sessions
AETHERFLOW_AGENT_STORAGE_AUTO_SAVE=true
AETHERFLOW_AGENT_STORAGE_SAVE_INTERVAL=30
AETHERFLOW_AGENT_STORAGE_COMPRESSION=true
AETHERFLOW_AGENT_STORAGE_CLEANUP_DAYS=30

# ReAct Engine Configuration
AETHERFLOW_AGENT_REACT_MAX_STEPS=10
AETHERFLOW_AGENT_REACT_STEP_TIMEOUT=30
AETHERFLOW_AGENT_REACT_ENABLE_STREAMING=false
AETHERFLOW_AGENT_REACT_EARLY_STOPPING=true

# Prompt Configuration
# AETHERFLOW_AGENT_PROMPTS_TEMPLATE_PATH=./custom_prompts
AETHERFLOW_AGENT_PROMPTS_LANGUAGE=en
AETHERFLOW_AGENT_PROMPTS_STYLE=professional

# Logging Configuration
AETHERFLOW_AGENT_LOGGING_LEVEL=INFO
AETHERFLOW_AGENT_LOGGING_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"
AETHERFLOW_AGENT_LOGGING_HANDLERS=["console"]
# AETHERFLOW_AGENT_LOGGING_FILE_PATH=.aetherflow/logs/agent.log

# Monitoring Configuration
AETHERFLOW_AGENT_MONITORING_ENABLED=true
AETHERFLOW_AGENT_MONITORING_INTERVAL=60
AETHERFLOW_AGENT_MONITORING_BACKEND=memory
# AETHERFLOW_AGENT_MONITORING_ENDPOINT=http://localhost:8000/metrics

# Environment-Specific Overrides
# Uncomment and modify for different environments

# Development Environment
# AETHERFLOW_AGENT_LLM_MODEL=gpt-3.5-turbo
# AETHERFLOW_AGENT_LLM_TEMPERATURE=0.0
# AETHERFLOW_AGENT_LOGGING_LEVEL=DEBUG
# AETHERFLOW_AGENT_MONITORING_ENABLED=false

# Production Environment
# AETHERFLOW_AGENT_LLM_TEMPERATURE=0.05
# AETHERFLOW_AGENT_LOGGING_LEVEL=WARNING
# AETHERFLOW_AGENT_MONITORING_ENABLED=true
# AETHERFLOW_AGENT_MONITORING_BACKEND=http
# AETHERFLOW_AGENT_MONITORING_ENDPOINT=https://metrics.yourcompany.com

